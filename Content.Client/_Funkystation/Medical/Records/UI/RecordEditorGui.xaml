<Control
    xmlns="https://spacestation14.io"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:ui="clr-namespace:Content.Client.Options.UI">
    <BoxContainer Orientation="Vertical">
        <ScrollContainer HScrollEnabled="False" VerticalExpand="True">
            <BoxContainer
                HorizontalExpand="True"
                Margin="10"
                Orientation="Vertical">

                <!--
                    TODO:
                    - personal information
                    - add back character descs?
                    - personality traits? wtf am i doing
                    - put check boxes into scroll boxes
                    - auto gen check boxes in c# via yml protos
                    - make title cute and pretty
                    - consistency pass
                -->

                <!--  title  -->
                <BoxContainer
                    HorizontalExpand="True"
                    Margin="0,10,0,0"
                    Orientation="Horizontal">
                    <Label StyleClasses="LabelHeading" Text="Records" />
                    <Control HorizontalExpand="True" MinSize="5 0" />
                    <TextureRect
                        SetSize="30 30"
                        Stretch="KeepAspectCentered"
                        StyleClasses="NTLogoDark"
                        VerticalAlignment="Center" />
                </BoxContainer>

                <!--  header; General Information  -->
                <PanelContainer>
                    <PanelContainer.PanelOverride>
                        <graphics:StyleBoxFlat BackgroundColor="#202028" />
                    </PanelContainer.PanelOverride>

                    <BoxContainer
                        HorizontalAlignment="Center"
                        HorizontalExpand="True"
                        Margin="5"
                        Orientation="Horizontal">
                        <Label StyleClasses="Italic" Text="General Information" />
                    </BoxContainer>
                </PanelContainer>

                <!--  general information  -->
                <GridContainer Columns="3" Margin="5,10">
                    <!--  height, weight, identifying info  -->
                    <BoxContainer
                        HorizontalExpand="True"
                        Margin="5,0"
                        Orientation="Vertical">
                        <BoxContainer HorizontalExpand="True" SeparationOverride="2">
                            <Label Text="Height:" />
                            <Control HorizontalExpand="True" MinSize="5 0" />
                            <LineEdit
                                HorizontalAlignment="Right"
                                MinSize="60 0"
                                Name="HeightEdit" />
                            <Label Margin="0,0,5,0" Text="cm " />
                            <Label MinWidth="60" Name="HeightImperialLabel" />
                        </BoxContainer>

                        <BoxContainer HorizontalExpand="True" SeparationOverride="2">
                            <Label Text="Weight:" />
                            <Control HorizontalExpand="True" MinSize="5 0" />
                            <LineEdit
                                HorizontalAlignment="Right"
                                MinSize="60 0"
                                Name="WeightEdit" />
                            <Label Margin="0,0,5,0" Text="kg " />
                            <Label MinWidth="70" Name="WeightImperialLabel" />
                        </BoxContainer>

                        <BoxContainer Orientation="Horizontal">
                            <Label Text="{Loc 'humanoid-profile-editor-cd-records-identifying-features'}" />
                            <Control HorizontalExpand="True" />
                            <LineEdit
                                HorizontalAlignment="Right"
                                MinSize="350 0"
                                Name="IdentifyingFeaturesEdit" />
                        </BoxContainer>
                    </BoxContainer>

                    <!--  divider  -->
                    <PanelContainer
                        Margin="5,0"
                        MinSize="2, 0"
                        VerticalExpand="True">
                        <PanelContainer.PanelOverride>
                            <graphics:StyleBoxFlat BackgroundColor="#202028" />
                        </PanelContainer.PanelOverride>
                    </PanelContainer>

                    <!--  work auth, insurance  -->
                    <BoxContainer
                        HorizontalExpand="True"
                        Margin="5,0"
                        Orientation="Vertical">
                        <BoxContainer HorizontalExpand="True">
                            <Label Text="{Loc 'humanoid-profile-editor-cd-records-work-authorization'}" />
                            <Control HorizontalExpand="True" MinSize="5 0" />
                            <CheckBox HorizontalAlignment="Right" Name="WorkAuthCheckBox" />
                        </BoxContainer>

                        <Control MinSize="0 20" />

                        <BoxContainer HorizontalExpand="True">
                            <Label Text="Insurance" />
                            <Control HorizontalExpand="True" MinSize="5 0" />
                            <CheckBox HorizontalAlignment="Right" Name="InsuranceCheckBox" />
                        </BoxContainer>

                        <BoxContainer HorizontalExpand="True">
                            <Label Text="Insurance Provider" />
                            <Control HorizontalExpand="True" MinSize="5 0" />
                            <ui:OptionDropDown Name="InsuranceCompanyDropdown" />
                        </BoxContainer>

                        <BoxContainer HorizontalExpand="True">
                            <Label Text="Insurance Plan" />
                            <Control HorizontalExpand="True" MinSize="5 0" />
                            <ui:OptionDropDown Name="InsurancePlanDropdown" />
                        </BoxContainer>
                    </BoxContainer>
                </GridContainer>

                <!--  header; Medical Information  -->
                <PanelContainer>
                    <PanelContainer.PanelOverride>
                        <graphics:StyleBoxFlat BackgroundColor="#202028" />
                    </PanelContainer.PanelOverride>

                    <BoxContainer
                        HorizontalAlignment="Center"
                        HorizontalExpand="True"
                        Margin="5"
                        Orientation="Horizontal">
                        <Label StyleClasses="Italic" Text="Medical Information" />
                    </BoxContainer>
                </PanelContainer>


                <!--  medical information  -->
                <BoxContainer Margin="5,10" Orientation="Vertical">
                    <GridContainer Columns="5">
                        <!--  allergies  -->
                        <BoxContainer
                            HorizontalExpand="True"
                            Margin="5,0"
                            Orientation="Vertical">

                            <Label Text="Allergies:" />
                            <BoxContainer Margin="5,0" Orientation="Vertical">
                                <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                                    <CheckBox HorizontalAlignment="Left" />
                                    <Label Text="Pollen" />
                                </BoxContainer>
                                <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                                    <CheckBox HorizontalAlignment="Left" />
                                    <Label Text="Nuts" />
                                </BoxContainer>
                                <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                                    <CheckBox HorizontalAlignment="Left" />
                                    <Label Text="Hugs" />
                                </BoxContainer>
                                <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                                    <CheckBox HorizontalAlignment="Left" />
                                    <Label Text="Shellfish" />
                                </BoxContainer>
                                <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                                    <CheckBox HorizontalAlignment="Left" />
                                    <Label Text="Other:" />
                                    <Control HorizontalExpand="True" />
                                    <LineEdit
                                        HorizontalAlignment="Right"
                                        MinSize="300 0"
                                        Name="AllergiesEdit" />
                                </BoxContainer>
                            </BoxContainer>
                        </BoxContainer>

                        <!--  divider  -->
                        <PanelContainer
                            Margin="5,0"
                            MinSize="2, 0"
                            VerticalExpand="True">
                            <PanelContainer.PanelOverride>
                                <graphics:StyleBoxFlat BackgroundColor="#202028" />
                            </PanelContainer.PanelOverride>
                        </PanelContainer>


                        <!--  prescriptions  -->
                        <BoxContainer
                            HorizontalExpand="True"
                            Margin="5,0"
                            Orientation="Vertical">
                            <Label Text="Prescriptions:" />
                            <BoxContainer Margin="5,0" Orientation="Vertical">
                                <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                                    <CheckBox HorizontalAlignment="Left" />
                                    <Label Text="Blood Thinners" />
                                </BoxContainer>
                                <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                                    <CheckBox HorizontalAlignment="Left" />
                                    <Label Text="Immunosuppressants" />
                                </BoxContainer>
                                <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                                    <CheckBox HorizontalAlignment="Left" />
                                    <Label Text="Insulin" />
                                </BoxContainer>
                                <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                                    <CheckBox HorizontalAlignment="Left" />
                                    <Label Text="Pain Relievers" />
                                </BoxContainer>
                                <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                                    <CheckBox HorizontalAlignment="Left" />
                                    <Label Text="Other:" />
                                    <Control HorizontalExpand="True" />
                                    <LineEdit
                                        HorizontalAlignment="Right"
                                        MinSize="300 0"
                                        Name="PrescriptionsEdit" />
                                </BoxContainer>
                            </BoxContainer>
                        </BoxContainer>

                        <!--  divider  -->
                        <PanelContainer
                            Margin="5,0"
                            MinSize="2, 0"
                            VerticalExpand="True">
                            <PanelContainer.PanelOverride>
                                <graphics:StyleBoxFlat BackgroundColor="#202028" />
                            </PanelContainer.PanelOverride>
                        </PanelContainer>

                        <!--  medical history  -->
                        <BoxContainer
                            HorizontalExpand="True"
                            Margin="5,0"
                            Orientation="Vertical">

                            <Label Text="Family Medical History:" />
                            <BoxContainer Margin="5,0" Orientation="Vertical">
                                <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                                    <CheckBox HorizontalAlignment="Left" />
                                    <Label Text="Allergies" />
                                </BoxContainer>
                                <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                                    <CheckBox HorizontalAlignment="Left" />
                                    <Label Text="Anemia" />
                                </BoxContainer>
                                <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                                    <CheckBox HorizontalAlignment="Left" />
                                    <Label Text="Anxiety" />
                                </BoxContainer>
                                <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                                    <CheckBox HorizontalAlignment="Left" />
                                    <Label Text="Arthritis" />
                                </BoxContainer>
                                <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                                    <CheckBox HorizontalAlignment="Left" />
                                    <Label Text="Other:" />
                                    <Control HorizontalExpand="True" />
                                    <LineEdit
                                        HorizontalAlignment="Right"
                                        MinSize="300 0"
                                        Name="FamilyHistoryEdit" />
                                </BoxContainer>
                            </BoxContainer>

                        </BoxContainer>
                    </GridContainer>

                    <!--  horizontal divider  -->
                    <PanelContainer
                        HorizontalExpand="True"
                        Margin="5,10"
                        MinSize="0, 2">
                        <PanelContainer.PanelOverride>
                            <graphics:StyleBoxFlat BackgroundColor="#202028" />
                        </PanelContainer.PanelOverride>
                    </PanelContainer>

                    <BoxContainer Margin="5,0" Orientation="Horizontal">
                        <Label Text="Blood Type: " />
                        <Control HorizontalExpand="True" />
                        <ui:OptionDropDown Name="BloodTypeDropdown" />
                    </BoxContainer>

                    <BoxContainer Margin="5,0" Orientation="Horizontal">
                        <Label Text="{Loc 'humanoid-profile-editor-cd-records-postmortem'}" />
                        <Control HorizontalExpand="True" />
                        <LineEdit
                            HorizontalAlignment="Right"
                            MinSize="350 0"
                            Name="PostmortemEdit" />
                    </BoxContainer>
                </BoxContainer>

                <!--  header; Personal Information  -->
                <PanelContainer>
                    <PanelContainer.PanelOverride>
                        <graphics:StyleBoxFlat BackgroundColor="#202028" />
                    </PanelContainer.PanelOverride>

                    <BoxContainer
                        HorizontalAlignment="Center"
                        HorizontalExpand="True"
                        Margin="5"
                        Orientation="Horizontal">
                        <Label StyleClasses="Italic" Text="Personal Information" />
                    </BoxContainer>
                </PanelContainer>



            </BoxContainer>
        </ScrollContainer>
    </BoxContainer>
</Control>
